{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "useDefineForClassFields": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
